# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=postgres

# Database Connection (for backend)
PGHOST=db
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your-secure-postgres-password-here
PGDATABASE=postgres

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Elasticsearch Settings
ES_DISCOVERY_TYPE=single-node
ES_SECURITY_ENABLED=false
ES_DESTRUCTIVE_REQUIRES_NAME=false
ES_JAVA_OPTS=-Xms512m -Xmx512m

# JWT Authentication (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-to-a-secure-random-string-minimum-32-characters
ADMIN_CREATION_SECRET=change-this-admin-secret-key

# Frontend API URL
VITE_API_URL=http://localhost:8000
